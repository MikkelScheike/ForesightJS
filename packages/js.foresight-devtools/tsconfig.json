{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2020",
    "declaration": true,
    "declarationMap": true,
    "useDefineForClassFields": false, // Recommended for Lit and modern JS class fields
    "experimentalDecorators": true, // Essential for decorators
    "emitDecoratorMetadata": true, // Often needed with experimentalDecorators, especially for some libraries (though less critical for Lit's @property itself)
    "sourceMap": true,
    "composite": true,
    "jsx": "react-jsx"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "references": [{ "path": "../js.foresight" }]
}
